<div class="row">
  <div class="col-md-6">
    <h1><%= @user.name %></h1>
    <p><%= @user.email %></p>
    <div class="row">
      <div class="col-md-12">
	<h3>Attended Events</h3>
	<% if @user.attended_events.any? %>
	  <ul class="list-group" id="attended-events">
	    <% @user.attended_events.each do |event| %>
	      <%= render partial: 'attended_events/user_attended', locals: {event: event} %>
	    <% end %>
	  </ul>
	<% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h3>My Events</h3>
    <ul class="list-group" id="events">
      <%= render @user.events %>
    </ul>
  </div>
</div>

