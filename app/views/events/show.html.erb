<div class="row">
  <div class="col-md-6">
    <h1><%= @event.name %></h1>
    <p><%= @event.creator.name %></p>
  </div>
  <div class="col-md-6">
    <h3>Attendees</h3>
    <% if @event.attendees.any? %>
      <% @event.attendees.each do |attendee| %>
        <%= render partial: 'attended_events/attendee', locals: {attendee: attendee} %>
      <% end %>
    <% end %>
  </div>
</div>
